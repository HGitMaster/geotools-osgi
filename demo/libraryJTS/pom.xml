  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.geotools.demo</groupId>
    <artifactId>demo</artifactId>
    <version>2.6-SNAPSHOT</version>
  </parent>

  <!-- =========================================================== -->
  <!--     Module Description                                      -->
  <!-- =========================================================== -->
  <groupId>org.geotools.demo</groupId>
  <artifactId>gt-libraryJTS</artifactId>
  <packaging>jar</packaging>
  <name>Geotools JTS Library Demo</name>
  <url>http://maven.geotools.fr/reports/demo/libraryJTS/</url>

  <scm>
    <connection>
      scm:svn:http://svn.geotools.org/trunk/demo/libraryJTS/
    </connection>
    <url>http://svn.geotools.org/trunk/demo/libraryJTS/</url>
  </scm>

  <description>
      Geotools demo of the Java Topology Suite library
  </description>
  
  <licenses>
    <license>
      <name>Public Domain</name>
      <url>
        http://svn.geotools.org/trunk/demo/libraryJTS/LICENSE.txt
      </url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <!-- =========================================================== -->
  <!--     Developers and Contributors                             -->
  <!-- =========================================================== -->
  <developers>
    <developer>
      <name>Adrian Custer</name>
      <id>acuster</id>
      <email>acuster@gmail.com</email>
      <roles>
        <role>Documentation Writer</role>
      </roles>
    </developer>
  </developers>

  <!--
  <contributors>
    <contributor>
      <name></name>
      <organization></organization>
      <roles>
        <role></role>
      </roles>
    </contributor>
  </contributors>
