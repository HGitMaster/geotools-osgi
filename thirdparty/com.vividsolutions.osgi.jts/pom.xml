<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.vividsolutions.osgi</groupId>
  <artifactId>com.vividsolutions.osgi.jts</artifactId>
  <packaging>bundle</packaging>
  <name>Java Topology Suite</name>
  <version>1.9</version>
  <parent>
    <groupId>org.geotools</groupId>
    <artifactId>thirdparty</artifactId>
    <version>2.6.0.osgi3</version>
  </parent> 
  <dependencies>
    <dependency>
        <groupId>com.vividsolutions</groupId> 
        <artifactId>jts</artifactId> 
        <version>1.9</version>
        <optional>true</optional> 
        <scope>compile</scope>        
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
		      <Bundle-Name>Java Topology Suite</Bundle-Name>
            <Bundle-SymbolicName>com.vividsolutions.osgi.jts</Bundle-SymbolicName>
            <Bundle-Description>OSGI bundle for Java Topology Suite</Bundle-Description>
            <Bundle-Version>1.9</Bundle-Version>
            <Export-Package>com.vividsolutions.jts.*</Export-Package>
            <Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency>
          </instructions>
          <unpackBundle>true</unpackBundle>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>