<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.batik.osgi</groupId>
  <artifactId>org.apache.batik.osgi.transcoder</artifactId>
  <packaging>bundle</packaging>
  <name>Apache Batik Transcoder</name>
  <version>1.6</version>
  <parent>
    <groupId>org.geotools</groupId>
    <artifactId>thirdparty</artifactId>
    <version>2.6.0.osgi2</version>
  </parent> 
  <dependencies>
    <dependency>
      <groupId>batik</groupId>
      <artifactId>batik-transcoder</artifactId>
      <version>1.6</version>
      <optional>true</optional>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
		<Bundle-Name>Apache Batic Transcoder</Bundle-Name>
                <Bundle-SymbolicName>org.apache.batik.osgi.transcoder</Bundle-SymbolicName>
                <Bundle-Description>OSGI bundle for Apache Batic Transcoder</Bundle-Description>
		<Bundle-Version>1.6</Bundle-Version>
            	<Export-Package>org.apache.batik.transcoder.*
		</Export-Package>
		<Import-Package>com.sun.image.codec.jpeg;resolution:=optional,
		org.apache.batik.ext.awt.image.codec;resolution:=optional,
		org.apache.batik.ext.awt.image.codec.tiff;resolution:=optional,
		org.w3c.dom.svg;resolution:=optional,
org.apache.batik.bridge,
 org.apache.batik.dom.svg,
 org.apache.batik.dom.util,
 org.apache.batik.ext.awt,
 org.apache.batik.ext.awt.image,
 org.apache.batik.ext.awt.image.rendered,
 org.apache.batik.gvt,
 org.apache.batik.gvt.renderer,
 org.apache.batik.i18n,
 org.apache.batik.svggen,
 org.apache.batik.util,
 org.apache.batik.xml,
 org.w3c.dom,
 org.xml.sax</Import-Package>
          <Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency>
          </instructions>
          <unpackBundle>true</unpackBundle>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>