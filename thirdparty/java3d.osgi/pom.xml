<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>java3d.osgi</groupId>
  <artifactId>java3d.osgi.vecmath</artifactId>
  <packaging>bundle</packaging>
  <name>Java 3D Vecmath Runtime Environment</name>
  <version>1.3.1</version>
  <parent>
    <groupId>org.geotools</groupId>
    <artifactId>thirdparty</artifactId>
    <version>2.6.0.osgi1</version> 
  </parent> 
  <dependencies>
   <dependency>
        <groupId>java3d</groupId>
        <artifactId>vecmath</artifactId>
        <version>1.3.1</version>
        <optional>true</optional>
        <scope>compile</scope>
   </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
		<Bundle-Name>Java 3D Vecmath Runtime Environment</Bundle-Name>
                <Bundle-SymbolicName>java3d.osgi.vecmath</Bundle-SymbolicName>
                <Bundle-Description>OSGI bundle for Java 3D Vecmath Runtime Environment</Bundle-Description>
		<Bundle-Version>1.3.1</Bundle-Version>
            	<Export-Package>javax.vecmath.*</Export-Package>
               <Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency>
          </instructions>
          <unpackBundle>true</unpackBundle>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>