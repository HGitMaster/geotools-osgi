<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.java.dev.osgi</groupId>
  <artifactId>net.java.dev.osgi.jsr275</artifactId>
  <packaging>bundle</packaging>
  <name>JSR-275 - Units API</name>
  <version>1.0.0.beta-2</version>
  <parent>
    <groupId>org.geotools</groupId>
    <artifactId>thirdparty</artifactId>
    <version>8.0.0.M1osgi1</version>
  </parent> 
  <dependencies>
   <dependency>
        <groupId>net.java.dev.jsr-275</groupId>
        <artifactId>jsr-275</artifactId>
        <version>1.0-beta-2</version>
        <optional>true</optional>
        <scope>compile</scope>
      </dependency>
  </dependencies>
  <build>
    <plugins>
    <plugin>
     <groupId>org.apache.maven.plugins</groupId>
     <artifactId>maven-dependency-plugin</artifactId>
     <version>2.1</version>
     <executions>
       <execution>
         <id>get-sources</id>
         <goals>
           <goal>sources</goal>
         </goals>
        </execution>
        <execution>
          <id>unpack-sources</id>
          <goals>
            <goal>unpack-dependencies</goal>
          </goals>
          <configuration>
            <classifier>sources</classifier>
            <includes>**/*.java</includes>
            <failOnMissingClassifierArtifact>false</failOnMissingClassifierArtifact>
            <outputDirectory>target/unpacked-sources</outputDirectory>
          </configuration>
        </execution>
       </executions>
      </plugin>
      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
        <configuration> 
          <attach>true</attach>
          <includes><include>**/*.java</include></includes>                 
          <archive>
            <manifestEntries>
              <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
              <Bundle-Name>${name}</Bundle-Name>
              <Bundle-SymbolicName>net.java.dev.osgi.jsr275.source
              </Bundle-SymbolicName>
              <Bundle-Version>${version}</Bundle-Version>
              <Eclipse-SourceBundle>
                net.java.dev.osgi.jsr275;version="${version}";roots:="."
              </Eclipse-SourceBundle>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.4</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Name>JSR-275 - Units API</Bundle-Name>
            <Bundle-SymbolicName>net.java.dev.osgi.jsr275</Bundle-SymbolicName>
            <Bundle-Description>OSGI bundle for JSR-275</Bundle-Description>
            <Bundle-Version>${version}</Bundle-Version>
            <Export-Package>javax.measure.*</Export-Package>
            <Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency>
            <Include-Resource/>
          </instructions>
          <unpackBundle>true</unpackBundle>
        </configuration>
      </plugin>
    </plugins>

    <resources>
      <resource>
        <directory>target/unpacked-sources</directory>
        <includes><include>**/*.java</include></includes>
      </resource>
    </resources>
  </build>
</project>