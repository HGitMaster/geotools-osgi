  <groupId>org.geotools</groupId>
  <artifactId>gt-tile</artifactId>
  <packaging>jar</packaging>
  <name>Tile Client</name>
  <url>http://maven.geotools.fr/reports/modules/unsupported/tile/</url>

  <scm>
    <connection>
      scm:svn:http://svn.geotools.org/trunk/modules/unsupported/tile/
    </connection>
    <url>http://svn.geotools.org/trunk/modules/unsupported/tile/</url>
  </scm>

  <description>
    Tile module, supports the retrival of GridCoverage from external tile servers.
  </description>

  <licenses>
