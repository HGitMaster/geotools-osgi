  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>**/WorldWindTileStrategyOnlineTest.java</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
