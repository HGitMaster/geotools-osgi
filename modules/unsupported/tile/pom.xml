  <developers>
    <developer>
      <id>jive</id>
      <name>Jody Garnett</name>
      <email>jgarnett@refractions.net</email>
      <organization>Refractions Research, Inc.</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>


