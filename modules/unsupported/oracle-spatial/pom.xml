            <exclude>**/OracleConnectionFactoryOnlineTest.java</exclude>
            <exclude>**/QuickOracleOnlineTest.java</exclude>
            <exclude>**/SDOOnlineTest.java</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

