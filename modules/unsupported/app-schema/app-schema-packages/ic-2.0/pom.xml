<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>net.opengis.schemas</groupId>
    <artifactId>ic-2.0</artifactId>
    <version>2.0.0-1</version>
    <name>Intelligence Community Information Security Marking (IC ISM) 2.0 application schema</name>
    
    <developers>
        <developer>
            <name>Ben Caradoc-Davies</name>
            <email>Ben.Caradoc-Davies@csiro.au</email>
            <organization>CSIRO Earth Science and Resource Engineering </organization>
            <roles>
                <role>packager</role>
            </roles>
        </developer>
    </developers>

    <build>
    
        <plugins>
            
            <!-- suppress bogus encoding warning -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

            <!-- download the application schema -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <configuration>
                            <tasks>
                                <property name="srcdir" value="http://schemas.opengis.net/ic/2.0"/>
                                <property name="destdir" value="${project.build.outputDirectory}/net/opengis/schemas/ic/2.0"/>
                                <mkdir dir="${destdir}"/>
                                <!-- maven antrun get does not support nested url so have to be explicit -->
                                <get src="${srcdir}/IC-ISM-v2.xsd" dest="${destdir}/IC-ISM-v2.xsd"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    
    </build>

</project>
