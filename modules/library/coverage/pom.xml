  <groupId>org.geotools</groupId>
  <artifactId>gt-coverage</artifactId>
  <packaging>jar</packaging>
  <name>Grid Coverage module</name>
  

  <scm>
    <connection>
      scm:svn:http://svn.osgeo.org/geotools/trunk/modules/library/coverage/
    </connection>
